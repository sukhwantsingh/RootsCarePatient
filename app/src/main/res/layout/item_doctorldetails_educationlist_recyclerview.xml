<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.customview.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:id="@+id/txt_doctordetails_qualification"
                android:text="Palaika C "
                android:layout_alignParentStart="true"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/txt_color"/>
            <RatingBar
                android:id="@+id/ratingBardoctordetailseview"
                style="@style/customRatingBar"
                android:layout_gravity="start"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:numStars="5"
                android:rating="5.0"
                android:isIndicator="true"
                android:progressTint="@color/orange"
                android:stepSize="1.0" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp">
            <com.customview.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:id="@+id/txt_doctordetails_institute_name"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/txt_color"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp">
            <com.customview.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:id="@+id/txt_doctordetails_passingyear"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/txt_color"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1ssp"
            android:layout_margin="@dimen/_3sdp"
            android:background="@color/home_page_view_color"/>



    </LinearLayout>
</layout>