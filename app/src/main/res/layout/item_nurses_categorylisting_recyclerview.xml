<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />


    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdview_nurses_category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/dp10">

        <LinearLayout
            android:id="@+id/ll_mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:cardCornerRadius="@dimen/_6sdp">

                        <ImageView
                            android:id="@+id/img_nurselisting_profilephoto"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/no_image" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RatingBar
                            android:id="@+id/ratingBardoctordetailseview"
                            style="@style/customRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:progressTint="@color/review_star"
                            android:stepSize="1.0"
                            android:visibility="gone" />

                        <com.customview.MyTextView
                            android:id="@+id/txt_nurselist_noofreview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="start"
                            android:visibility="gone"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginEnd="@dimen/dp10"
                    android:orientation="vertical">

                    <com.customview.MyTextView
                        android:id="@+id/txt_nurse_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />

                    <com.customview.MyTextView
                        android:id="@+id/txt_nurse_qualification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="MBBS General Physician"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/_10ssp" />

                    <com.customview.MyTextView
                        android:id="@+id/txt_nurse_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:maxLines="2"
                        android:text="Lorem Ipsum has been the industry's standard dummy text ever since the 1500"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/dp8" />


                    <com.customview.MyCustomButton
                        android:id="@+id/btn_rootscare_booking_nurses"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_weight="1"
                        android:background="@drawable/booking_new_bg"
                        android:drawableEnd="@drawable/white_arrow_circle"
                        android:drawablePadding="@dimen/dp10"
                        android:padding="@dimen/_5sdp"
                        android:text="Book Appointment"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>