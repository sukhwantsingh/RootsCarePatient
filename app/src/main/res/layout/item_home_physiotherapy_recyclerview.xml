<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />


    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdview_nurses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_30sdp"
        app:cardCornerRadius="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_73sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_7sdp">

                <ImageView
                    android:id="@+id/img_home_pathologyprofile"
                    android:layout_width="@dimen/_73sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_home_phy" />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical">

                <com.customview.MyTextView
                    android:id="@+id/txt_home_physiotherapy_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_7ssp"
                    android:textStyle="bold" />

                <com.customview.MyTextView
                    android:id="@+id/txt_home_physiotherapy_qualification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/_6ssp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>