<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_sidemenue_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3sdp">

        <ImageView
            android:id="@+id/check"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/_5sdp"
            android:contentDescription="@null"
            android:padding="@dimen/_5sdp" />

        <ImageView
            android:id="@+id/check2"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignTop="@+id/item_tv"
            android:layout_alignBottom="@+id/item_tv"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:contentDescription="@null"
            android:visibility="gone" />

        <com.customview.MyTextView
            android:id="@+id/item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toStartOf="@+id/check2"
            android:layout_toEndOf="@id/check"
            android:padding="@dimen/_5sdp"
            android:text="My Upcoming Appointment"
            android:textColor="@color/background_white"
            android:textSize="@dimen/_11ssp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/check"
            android:layout_marginTop="@dimen/dp10"
            android:background="#1074BC"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>