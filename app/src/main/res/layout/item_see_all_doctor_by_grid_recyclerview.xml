<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />


    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdview_seeall_doctorlisting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_5sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_6sdp">

                <ImageView
                    android:id="@+id/img_all_doctorlist_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_image" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical">

                <com.customview.MyTextView
                    android:id="@+id/txt_all_doctorlist_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />

                <com.customview.MyTextView
                    android:id="@+id/txt_all_doctorlist_qualification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/dp8" />

                <com.customview.MyTextView
                    android:id="@+id/txt_all_doctorlist_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:maxLines="3"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/_7ssp" />

                <com.customview.MyCustomButton
                    android:id="@+id/btn_rootscare_doctorviewdetails"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/blue_booking_bg"
                    android:drawableEnd="@drawable/white_arrow_circle"
                    android:drawablePadding="@dimen/dp10"
                    android:padding="@dimen/_3sdp"
                    android:text="View Details"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp10"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>