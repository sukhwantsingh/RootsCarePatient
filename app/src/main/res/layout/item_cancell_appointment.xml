<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />


    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdview_appoitment_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/dp10">

        <LinearLayout
            android:id="@+id/ll_mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cancel_bg_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.customview.MyTextView
                    android:id="@+id/txt_appointment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />

                <com.customview.MyTextView
                    android:id="@+id/tv_status"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:background="@drawable/rounded_red_btn"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="Cancelled"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20">

                <LinearLayout
                    android:id="@+id/ll_name_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/dp10"
                        android:orientation="horizontal">

                        <com.customview.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient Name : "
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold" />

                        <com.customview.MyTextView
                            android:id="@+id/txt_cancelappointment_patient_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:text=""
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/dp10"
                        android:orientation="horizontal">

                        <com.customview.MyTextView
                            android:id="@+id/txt_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doctor Name : "
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold" />

                        <com.customview.MyTextView
                            android:id="@+id/txt_cancelappointment_doctor_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:text=""
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/dp10"
                        android:orientation="horizontal">

                        <com.customview.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking Date : "
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold" />

                        <com.customview.MyTextView
                            android:id="@+id/txt_cancelappointment_booking_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:text=""
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/dp10"
                        android:orientation="horizontal">

                        <com.customview.MyTextView
                            android:id="@+id/tv_appointment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appointment Time : "
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold" />

                        <com.customview.MyTextView
                            android:id="@+id/txt_appointmentcancel_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:text=""
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/dp10"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.customview.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone No : "
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold" />

                        <com.customview.MyTextView
                            android:id="@+id/txt_cancelappointment_phone_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:text=""
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/dp10"
                        android:orientation="horizontal">

                        <com.customview.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appointment Date : "
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold" />

                        <com.customview.MyTextView
                            android:id="@+id/txt_cancelappointment_appointment_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp10"
                            android:text=""
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/ll_name_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/cancel_appiontment_icon"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/dp20"
                android:background="@drawable/appiontment_bg"
                android:visibility="gone">

                <com.customview.MyCustomButton
                    android:id="@+id/btnViewDetails"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp10"
                    android:background="@drawable/cancel_btn_rectangle"
                    android:drawableEnd="@drawable/white_arrow_circle"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="View Details"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9ssp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_8sdp"
                        android:text="Upcoming"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        app:drawableStartCompat="@drawable/upcoming_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_6sdp"
                        android:text="Completed"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        app:drawableStartCompat="@drawable/completed_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_6sdp"
                        android:text="Cancelled"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        app:drawableStartCompat="@drawable/cancelled_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Rescheduled"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        app:drawableStartCompat="@drawable/rescheduled_icon" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>