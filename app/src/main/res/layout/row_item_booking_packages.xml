<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="node"
            type="com.rootscare.ui.newaddition.providerlisting.models.ModelBookingInitialLabData.Result.PackageBaseTask" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp6"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:padding="2dp"
        app:cardCornerRadius="@dimen/dp5"
        app:cardElevation="@dimen/dp2">


        <RelativeLayout
            android:id="@+id/rl_root"
            android:layout_width="120dp"
            android:padding="@dimen/dp8"
            android:background="@drawable/round_gray_white_bg"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvhname"
                style="@style/AppTheme.TextMedium"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAlignment="viewStart"
                android:textColor="@color/indicator_color"
                android:textSize="@dimen/dp12"
                tools:text="Good Health Gold packages" />

            <TextView
                android:id="@+id/tv_rate"
                style="@style/AppTheme.TextRegular"
                android:layout_width="42dp"
                android:layout_height="@dimen/dp18"
                android:layout_below="@+id/tvhname"
                android:layout_gravity="bottom|start"
                android:layout_marginTop="@dimen/dp12"
                android:background="@drawable/ic_back_green_rect"
                android:drawablePadding="@dimen/dp3"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp2"
                android:textColor="@color/white"
                android:textSize="@dimen/dp10"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ico_star_white"
                tools:text="0.0" />

            <TextView
                android:id="@+id/tvh_test_includes"
                style="@style/AppTheme.TextRegular"
                android:layout_below="@+id/tvhname"
                android:layout_marginTop="@dimen/dp8"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textColor="@color/colorTxtGrey"
                android:textSize="@dimen/dp10"
                android:text="ISO certified lab" />

            <View
                android:id="@+id/vl1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvh_test_includes"
                android:layout_marginTop="@dimen/dp8"
                android:background="@color/divider_support_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv_price"
                style="@style/AppTheme.TextMedium"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textColor="@color/txt_color_profile_desc"
                android:textSize="@dimen/dp13"
                android:layout_below="@+id/vl1"
                tools:text="1000 SAR" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>