<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="node"
            type="com.rootscare.ui.newaddition.providerlisting.packages.models.ModelPackages.Result.PackageBaseTask" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp4"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp16">

            <TextView
                android:id="@+id/tv_package_name"
                style="@style/AppTheme.TextMedium"
                android:layout_width="match_parent"
                android:text="@{node.name}"
                android:textColor="@color/txt_color_profile_desc"
                android:textSize="@dimen/dp18"
                tools:text="Good Health Gold Package" />

            <TextView
                android:id="@+id/tv_tests_counts"
                style="@style/AppTheme.TextRegular"
                android:layout_below="@+id/tv_package_name"
                android:layout_alignStart="@+id/tv_package_name"
                android:layout_marginTop="@dimen/dp3"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{node.test_count}"
                android:textColor="@color/colorTxtGrey1"
                android:textSize="@dimen/dp12"
                tools:text="Includes 60 Tests" />

            <TextView
                android:id="@+id/tv_tests"
                style="@style/AppTheme.TextRegular"
                android:layout_below="@+id/tv_tests_counts"
                android:layout_alignStart="@+id/tv_tests_counts"
                android:layout_marginTop="@dimen/dp10"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:text="@{node.task_details}"
                android:textColor="@color/indicator_color"
                android:textSize="@dimen/dp10"
                tools:text="Calcium, LFT, Urine Routine, Kidney Function Test, Iron Studies, Basic, Complete Blood Count, Vitamin D, TPT, Lipid Profile, Vitamin B12, Diabetes Screening..." />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cns_cba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tests"
                android:paddingTop="@dimen/dp8"
                android:visibility="visible"
                app:layout_goneMarginBottom="@dimen/dp20">

                <TextView
                    android:id="@+id/tvh_bank"
                    style="@style/AppTheme.TextRegular"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/dp12"
                    android:singleLine="true"
                    android:text="@{node.maxrp}"
                    android:textColor="@color/colorTxtGrey1"
                    android:textSize="@dimen/dp12"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strikeThrough="@{true}"
                    tools:text="3200 SAR" />

                <TextView
                    android:id="@+id/tv_bank_name"
                    style="@style/AppTheme.TextMedium"
                    android:layout_width="@dimen/dimen_0dp"
                    android:text="@{node.price}"
                    tools:text="2200 SAR"
                    android:textColor="@color/txt_color_profile_desc"
                    android:textSize="@dimen/dp15"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="@+id/tvh_bank"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_percent_off"
                    app:layout_constraintTop_toTopOf="@+id/tv_percent_off" />

                <TextView
                    android:id="@+id/tv_percent_off"
                    style="@style/AppTheme.TextRegular"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_marginStart="@dimen/dp12"
                    android:layout_marginTop="@dimen/dp2"
                    android:background="@drawable/round_solid_stroke_width_off"
                    android:text="@{node.dis_off}"
                    tools:text="30% Off"
                    android:textColor="@color/green_off_text"
                    android:textSize="@dimen/dp10"
                    app:layout_constraintStart_toEndOf="@+id/tv_bank_name"
                    app:layout_constraintTop_toBottomOf="@+id/tvh_bank" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
