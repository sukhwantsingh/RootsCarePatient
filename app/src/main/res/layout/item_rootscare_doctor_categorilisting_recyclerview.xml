<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />


    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdview_doctor_category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:elevation="@dimen/dp20"
        app:cardCornerRadius="@dimen/dp10">

        <LinearLayout
            android:id="@+id/ll_mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_all_doctor_image_list"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:gravity="center"
                        android:src="@drawable/no_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RatingBar
                            android:id="@+id/ratingBarteacherFeedback"
                            style="@style/customRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:isIndicator="false"
                            android:numStars="7"
                            android:progressTint="@color/orange"
                            android:stepSize="1.0" />

                        <com.customview.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:text="49 Reviews"
                            android:textSize="@dimen/_10ssp" />

                        <com.customview.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:text="Available Today"
                            android:textSize="@dimen/dp8" />

                        <com.customview.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:text="4:30PM-7:30PM"
                            android:textSize="@dimen/dp8" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:orientation="vertical">

                        <com.customview.MyTextView
                            android:id="@+id/txt_all_doctor_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dr.Maya Grey"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />

                        <com.customview.MyTextView
                            android:id="@+id/txt_all_doctor_qualification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10"
                            android:text="MBBS General Physician"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_10ssp" />

                        <com.customview.MyTextView
                            android:id="@+id/txt_all_doctor_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:maxLines="2"
                            android:text="Lorem Ipsum has been the industry's standard dummy text ever since the 1500"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/dp8"
                            android:visibility="gone" />

                        <com.customview.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:maxLines="2"
                            android:text="Lorem Ipsum has been the industry's standard dummy text ever since the 1500"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/dp8"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.customview.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fees : "
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12ssp" />

                            <com.customview.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:text="Rs.600"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>

                        <com.customview.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:maxLines="1"
                            android:text="Lorem Ipsum has been the industry's standard"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/dp8"
                            android:visibility="gone" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp10"
                    android:padding="@dimen/_5sdp"
                    android:text="Video Consultation"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_rootscare_booking_doctor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/white_arrow_circle"
                    android:drawablePadding="@dimen/dp10"
                    android:padding="@dimen/_5sdp"
                    android:text="Book Appointment"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>